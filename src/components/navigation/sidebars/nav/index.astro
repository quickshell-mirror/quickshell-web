---
import SidebarWrapper from "./SidebarWrapper.tsx";
import RootNav from "./RootNav.astro";

export interface Props {
  mobile: boolean;
}

const { mobile } = Astro.props;
---
<aside class=`nav-wrapper${mobile ? "-mobile" : ""} id="nav"`>
  { mobile ? (
    <SidebarWrapper client:load>
      <RootNav/>
    </SidebarWrapper>
  ) : (
    <RootNav/>
  )}
</aside>
